# ─────────────────────────────────────────────
# Doer IAM — Environment Configuration Template
# Copy to .env and fill in your values
# ─────────────────────────────────────────────

# ─── KEYCLOAK (runs locally) ───
KC_DB=postgres
KC_DB_URL=jdbc:postgresql://localhost:5432/keycloak
KC_DB_USERNAME=keycloak_user
KC_DB_PASSWORD=CHANGE_ME
KC_HOSTNAME=localhost
KC_HOSTNAME_PORT=8080
KC_HTTP_ENABLED=true
KC_HEALTH_ENABLED=true
KC_METRICS_ENABLED=true
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME

# ─── POSTGRESQL (runs locally) ───
PG_HOST=localhost
PG_PORT=5432
KC_PG_DB=keycloak
KC_PG_USER=keycloak_user
KC_PG_PASSWORD=CHANGE_ME
AUTH_PG_DB=doer_auth
AUTH_PG_USER=doer_auth_user
AUTH_PG_PASSWORD=CHANGE_ME

# ─── REDIS (Docker) ───
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME

# ─── APISIX (Docker) ───
APISIX_ADMIN_KEY=CHANGE_ME
APISIX_HTTP_PORT=9080
APISIX_HTTPS_PORT=9443
APISIX_ADMIN_PORT=9180

# ─── ETCD (Docker) ───
ETCD_HOST=etcd
ETCD_PORT=2379

# ─── PROMETHEUS (Docker) ───
PROMETHEUS_PORT=9090

# ─── GRAFANA (Docker) ───
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME

# ─── KEYCLOAK CLIENTS (generated by scripts/setup-realm.sh) ───
KC_REALM=doer
AUTH_SVC_CLIENT_ID=doer-auth-svc
AUTH_SVC_CLIENT_SECRET=CHANGE_ME
VISA_CLIENT_ID=doer-visa
ADMIN_CLIENT_ID=doer-admin
